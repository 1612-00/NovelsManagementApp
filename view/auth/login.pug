extends ../layouts/common
block content
	.container.mt-5
		if errors
			each error in errors
				.alert.alert-danger= error
		h1 Login 
		form.mt-4(method="POST")
			.form-group
				label(for="email") Email
				input#email.form-control(type="email", name="email", value=value ? value.email : '')
			
			.form-group
				label(for="password") Password
				input#password.form-control(type="password", name="password", value=value ? value.password : '')
				
			button.btn.btn-primary.ml-3 Login
